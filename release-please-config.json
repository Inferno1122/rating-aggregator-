{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "separate-pull-requests": false,
  "include-component-in-tag": false,
  "packages": {
    ".": {
      "path": ".",
      "release-type": "node",
      "package-name": "ratings-aggregator"
    },
    "frontend": {
      "path": "frontend",
      "release-type": "node",
      "package-name": "ratings-pro-frontend"
    }
  },
  "plugins": [
    {
      "type": "node-workspace",
      "merge": false
    },
    {
      "type": "linked-versions",
      "groupName": "mono-repo",
      "updateAllPackages": true
    }
  ]
}
