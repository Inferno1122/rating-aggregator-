# Stremio Addon Port
PORT=61262

# TMDb API Key (Get from https://www.themoviedb.org/settings/api)
TMDB_API_KEY="YOUR_TMDB_API_KEY"

# Redis Connection URL (e.g., redis://localhost:6379 or redis://user:password@host:port)
REDIS_URL="redis://localhost:6379"

# Cache duration in seconds (e.g., 86400 = 24 hours)
CACHE_TTL_SECONDS=86400

# Set log level (e.g., info, warn, error, debug) - Optional
LOG_LEVEL=info

# Homepage promotion text (optional)
HOME_BLURB="Discover ratings from multiple sources in one place!"