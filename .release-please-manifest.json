{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "release-type": "node",
      "package-name": "ratings-aggregator"
    },
    "frontend": {
      "release-type": "node",
      "package-name": "ratings-pro-frontend"
    }
  },
  "extra-files": [
    {
      "path": "src/config/index.js",
      "parse-as": "string",
      "regex": "version:\\s*['\\\"](.*?)['\\\"]",
      "replacement": "version: '${version}'"
    },
    {
      "path": "frontend/src/config.js",
      "parse-as": "string",
      "regex": "version:\\s*['\\\"](.*?)['\\\"]",
      "replacement": "version: '${version}'"
    }
  ]
}
