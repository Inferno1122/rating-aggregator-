{
  "packages": {
    "backend": {
      "path": ".",
      "release-type": "node",
      "package-name": "ratings-aggregator"
    },
    "frontend": {
      "path": "frontend",
      "release-type": "node",
      "package-name": "ratings-pro-frontend"
    }
  },
  "plugins": [
    {
      "type": "node-workspace",
      "config": {}
    },
    {
      "type": "extra-files",
      "config": {
        "extra-files": [
          {
            "path": "src/config/index.js",
            "type": "text",
            "parse-as": "string",
            "regex": "version:\\s*['\\\"](.*?)['\\\"]",
            "replacement": "version: '${version}'"
          },
          {
            "path": "frontend/src/config.js",
            "type": "text",
            "parse-as": "string",
            "regex": "version:\\s*['\\\"](.*?)['\\\"]",
            "replacement": "version: '${version}'"
          }
        ]
      }
    }
  ]
}
