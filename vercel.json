{
  "builds": [
    { 
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": [
          "src/**",
          ".env"
        ]
      }
    },
    { 
      "src": "frontend/**",
      "use": "@vercel/static" 
    }
  ],
  "rewrites": [
    { "source": "/manifest.json", "destination": "/api" },
    { "source": "/configure/_assets/(.*)", "destination": "/frontend/dist/assets/$1" },
    { "source": "/configure", "destination": "/frontend/dist/index.html" },
    { "source": "/(.*)", "destination": "/api" }
  ],
  "headers": [
    {
      "source": "/configure/_assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}