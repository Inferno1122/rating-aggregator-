{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "^/(manifest\\.json|stream/.*|remote/.*)$",
      "dest": "/api/index.js"
    },
    {
      "src": "^/configure/assets/(.*)$",
      "dest": "/frontend/dist/assets/$1"
    },
    {
      "src": "^/configure/?$",
      "dest": "/frontend/dist/index.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/",
      "dest": "/configure/"
    }
  ]
}
